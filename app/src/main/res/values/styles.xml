<resources>

    <!-- Base application theme. -->
   <!-- @android:style/Theme.Material (dark version)

    @android:style/Theme.Material.Light (light version)

    @android:style/Theme.Material.Light.DarkActionBar
    -->
    <style name="MyEditedTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Main theme colors   Replace this ->  Theme.AppCompat.NoActionBar           By ->  android:Theme.Material.NoActionBar  for your mobile-->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>

    </style>
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#f0e68c</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="NavigationButton" parent="android:Theme.Translucent">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme2" parent="AppTheme">
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>

    <style name="MyActionButtonStyle" parent="AppTheme">
        <item name="android:minWidth">50dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>
    <style name="Button" parent="android:Theme.Black">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
     </style>



    <style name="MyTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:listViewStyle">@style/MyListView</item>
    </style>

    <style name="MyListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/ic_home</item>
    </style>
</resources>
